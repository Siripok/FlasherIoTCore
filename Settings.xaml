<Window x:Class="WpfApp1.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Settings" Height="469" Width="919">
    <Grid Margin="5,5,24,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lb_settings" Margin="10,19,31,55">
            <ListBox.ItemTemplate>
                <DataTemplate x:Name="DataTemplateSettings">
                    <StackPanel Orientation="Vertical" Margin="3">
                        <StackPanel Orientation="Horizontal" Margin="3">
                            <ComboBox Text="{Binding Type}"  Margin="3,3,3,3" ItemsSource="{Binding TypesDevicesSettings}" Width="128" />
                            <Button Content="Редактировать" Margin="3,3,3,3" Click="cmd_Edit_Clicked"/>
                            <!--Text="{Binding Devices}"-->
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="3">
                            <Label Content="svostva"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
        




    </Grid>
</Window>
