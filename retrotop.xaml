<Window x:Class="WpfApp1.retrotop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="retrotop" Height="450" Width="400">
    <Grid HorizontalAlignment="Left" Width="380">
        <Label Content="Номер пина" Margin="19,20,0,0" VerticalAlignment="Top" Height="26" HorizontalAlignment="Left" Width="78"/>
        <Label Content="Номер кнопки" HorizontalAlignment="Left" Margin="18,82,0,0" VerticalAlignment="Top" Height="26" Width="90"/>
        <TextBox x:Name="txt_numPIN" Margin="17,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" HorizontalAlignment="Left" Width="120"/>
        <TextBox x:Name="txt_numBUTTON" HorizontalAlignment="Left" Margin="17,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
        <CheckBox x:Name="chk_mechanicBtn" Content="Механическаяк кнопка" Margin="19,160,0,0" VerticalAlignment="Top" Height="15" HorizontalAlignment="Left"/>        
        <Button x:Name="btn_Save" Content="Применить" HorizontalAlignment="Left" Margin="19,314,0,0" VerticalAlignment="Top" Width="144" Click="btn_Save_Click"/>
    </Grid>
</Window>
