<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Главная helpTool" Height="524" Width="1080" Closed="Window_Closed">
    <Grid Margin="-13,1,8,7">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="329*"/>
            <RowDefinition Height="130"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="513*"/>
            <ColumnDefinition Width="306*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Update" Content="Обновить" Grid.Column="1" Margin="0,50,10,0" VerticalAlignment="Top" Click="Update_Click" Background="#FF5DA3DE" Height="40" Grid.Row="2" HorizontalAlignment="Right" Width="80"/>
        <Button x:Name="Clear" Content="Очистить поля" Grid.Column="1" HorizontalAlignment="Right" Margin="0,50,100,0" VerticalAlignment="Top" Width="100" Click="Clear_Click" Background="#FFF75F5F" Height="40" Grid.Row="2"/>

        <Button x:Name="flash_all" Content="Прошить все" Grid.Column="1" Margin="0,10,10,0" VerticalAlignment="Top" Background="#FFFB9E69" Foreground="#FF232323" Click="flash_all_Click" Height="20" Grid.Row="2" HorizontalAlignment="Right" Width="190"/>
        <TextBox x:Name="txt_espressif" HorizontalAlignment="Left" Margin="27,89,0,0" TextWrapping="Wrap" Width="151" Height="18" VerticalAlignment="Top" Grid.Row="2"/>
        <ListBox x:Name="lb"  Grid.ColumnSpan="2" Margin="25,10,10,10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate x:Name="DoubleLineDataTemplate">

                    <StackPanel Orientation="Vertical" Margin="3">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding elem}" Margin="2,2,2,2" VerticalAlignment="Center"/>
                            <CheckBox  IsChecked="{Binding chk}"  Margin="2,2,2,2" VerticalAlignment="Center" />

                            <ComboBox  Text="{Binding Path}" ItemsSource="{Binding DirectoryProject}" Margin="3,3,3,3" Width="350" Height="25" Padding="2,2,2,2"/>

                            <Button Content="-->" Margin="5,3,3,3" VerticalAlignment="Top" Width="25"  Height="25" Click="cmdOpen_Clicked"/>
                            <ComboBox Text="{Binding Port}" Margin="5,3,3,3" Width="100" Height="25" ItemsSource="{Binding portNames}"/>

                            <Button Content="Прошить" Margin="5,3,3,3" VerticalAlignment="Top" Width="95" Background="#FFFB9E69" Foreground="#FF232323" Height="25" Click="cmdFlash_Clicked"/>
                            <Button Content="log" Margin="5,3,3,3" VerticalAlignment="Top" Width="40" Background="#cccccc" Foreground="#FF232323" Height="25" Click="cmdLog_Clicked"/>

                        </StackPanel>
                        <!--MAC COM-->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="Bold" Text="MAC:" Foreground="DarkOrange" Margin="35,0,0,0"/>
                            <TextBlock FontWeight="Bold" Text="{Binding flMAC}" Foreground="#222222" Margin="4,0,0,0"/>
                            <TextBlock FontWeight="Bold" Text="{Binding status}" Foreground="#e80000" Margin="20,0,0,0"/>
                        </StackPanel>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <CheckBox x:Name="chk_noClose" ToolTip="Оставит консоль открытой, удобно при отладке, и поиске проблем" Content="Не закрывать консоль" HorizontalAlignment="Left" Margin="31,10,0,0" VerticalAlignment="Top" Click="chk_noClose_Click" Grid.Row="2"/>
        <Label Content="Путь до ESP:" HorizontalAlignment="Left" Margin="31,0,0,0" VerticalAlignment="Center" Grid.Row="2"/>
        <Label Content="Проект" HorizontalAlignment="Left" Margin="227,48,0,0" VerticalAlignment="Top" Height="28" Width="52" Grid.Row="2"/>
        <Button x:Name="project" ToolTip="Управление проектами" Content="+" HorizontalContentAlignment="Center" FontSize="16"  VerticalContentAlignment="Center" Padding="0,-4,0,0" FontWeight="Bold" HorizontalAlignment="Left" Margin="411,86,0,0" VerticalAlignment="Top" Width="24" Height="24" BorderBrush="#009900" Foreground="#009900" Background="#eeeeee" Click="project_Click" RenderTransformOrigin="0.5,0.5" Grid.Row="2"/>
        <ComboBox x:Name="cbProjectNames" ItemsSource="{Binding projects}" HorizontalAlignment="Left" Margin="227,87,0,0" VerticalAlignment="Top" Width="179" Grid.Row="2"/>
        <TextBox x:Name="txt_pref" HorizontalAlignment="Left" Margin="286,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="2"/>
        <Label Content="Префикс" HorizontalAlignment="Left" Margin="217,7,0,0" VerticalAlignment="Top" Grid.Row="2"/>
        <TextBox x:Name="txt_log" Margin="0,10,10,10" Text="Вывод информации" TextWrapping="Wrap" VerticalAlignment="Stretch" Grid.Column="2" Grid.RowSpan="2" Grid.Row="1"/>
        <CheckBox x:Name="chk_all" ToolTip="Установить либо снять все галочки" Content="Все" HorizontalAlignment="Left" Margin="25,0,0,0" Click="chk_all_Click" RenderTransformOrigin="1.965,-0.66" Height="15" VerticalAlignment="Center"/>
        <CheckBox x:Name="chk_erase" Content="Очищать при прошивке" HorizontalAlignment="Left" Margin="31,30,0,0" Grid.Row="2" VerticalAlignment="Top"/>

    </Grid>
</Window>
